# TAL Deployment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============ Required ============

# Deployer private key (with 0x prefix)
PRIVATE_KEY=

# RPC endpoints
RPC_URL=
L1_RPC_URL=

# ============ L2 External Contracts (Optional) ============

# L2 staking bridge address (TALStakingBridgeL2 proxy)
STAKING_BRIDGE=

# ZK verifier contract address
ZK_VERIFIER=

# DRB CommitReveal2 coordinator address (MockDRB deployed if empty on local)
DRB_COORDINATOR=

# TEE oracle address
TEE_ORACLE=

# Treasury address for protocol fees (defaults to deployer if empty)
TREASURY=

# ============ L1 Bridge Contracts ============

# SeigManager (V2) address on L1 (for stakeOf queries and seigniorage)
SEIG_MANAGER=

# DepositManager address on L1 (for slashing)
DEPOSIT_MANAGER=

# Treasury address to receive slashed funds (defaults to deployer if empty)
SLASH_RECIPIENT=

# L1CrossDomainMessenger address
L1_CROSS_DOMAIN_MESSENGER=

# TALStakingBridgeL2 proxy address on L2 (set after L2 deployment)
L2_BRIDGE_ADDRESS=

# Tokamak layer2 address for stakeOf queries
TAL_LAYER2_ADDRESS=

# ============ Verification ============

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=
