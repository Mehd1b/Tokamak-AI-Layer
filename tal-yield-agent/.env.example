# ======================== Chain ========================

# Thanos Sepolia RPC (default)
RPC_URL=https://rpc.thanos-sepolia.tokamak.network

# ======================== TAL Contracts ========================
# Deployed on Thanos Sepolia (Chain ID: 111551119090)
# These override the hardcoded defaults from the shared package.

IDENTITY_REGISTRY=0x3f89CD27fD877827E7665A9883b3c0180E22A525
REPUTATION_REGISTRY=0x0052258E517835081c94c0B685409f2EfC4D502b
VALIDATION_REGISTRY=0x09447147C6E75a60A449f38532F06E19F5F632F3
TASK_FEE_ESCROW=0x43f9E59b6bFCacD70fcba4f3F6234a6a9F064b8C
STAKING_INTEGRATION_MODULE=0xDc9d9A78676C600E7Ca55a8D0c63da9462Acfe30

# ======================== Agent Identity ========================

# The ERC-721 token ID for this agent (minted via TALIdentityRegistry)
AGENT_ID=

# Operator hot wallet private key (for automated task confirmation)
# In production: use KMS (AWS/GCP) or hardware wallet
OPERATOR_PRIVATE_KEY=

# ======================== Data Sources ========================

# DeFi Llama API (default, no key needed)
DEFILLAMA_API=https://yields.llama.fi

# IPFS gateway for snapshot/report storage
IPFS_GATEWAY=https://gateway.pinata.cloud
PINATA_API_KEY=
PINATA_SECRET_KEY=

# ======================== Infrastructure ========================

# Redis (for BullMQ job queue)
REDIS_URL=redis://localhost:6379

# PostgreSQL (for persistent storage)
DATABASE_URL=postgresql://tal:tal_secret@localhost:5432/tal_yield_agent

# ======================== Server ========================

PORT=3000
HOST=0.0.0.0

# Comma-separated API keys for authentication (leave empty to disable)
API_KEYS=

# ======================== Worker ========================

# Pool data refresh interval (milliseconds, default: 5 min)
POOL_REFRESH_INTERVAL_MS=300000

# APY accuracy check interval (milliseconds, default: 24 hours)
APY_CHECK_INTERVAL_MS=86400000

# ======================== Logging ========================

# fatal | error | warn | info | debug | trace
LOG_LEVEL=info
