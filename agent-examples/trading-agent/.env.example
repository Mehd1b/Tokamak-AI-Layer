# ── Network ──────────────────────────────────────────────
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
THANOS_RPC_URL=https://rpc.thanos-sepolia.tokamak.network

# ── Agent Identity ───────────────────────────────────────
# Private key for TAL registration ONLY (not user funds)
AGENT_PRIVATE_KEY=0x...
# Set after running: pnpm register
AGENT_ID=

# ── LLM ──────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...
# Fallback
OPENAI_API_KEY=sk-...

# ── IPFS (Pinata) ───────────────────────────────────────
PINATA_API_KEY=
PINATA_SECRET_KEY=

# ── Server ───────────────────────────────────────────────
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# ── Security ─────────────────────────────────────────────
# Comma-separated API keys (leave empty for open access)
API_KEYS=
# Enable EIP-712 signature verification
EIP712_AUTH=false

# ── SIWA ─────────────────────────────────────────────────
SIWA_DOMAIN=localhost
SIWA_SESSION_TTL=3600
